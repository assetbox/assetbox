{
  "name": "@assetbox/root",
  "type": "module",
  "version": "0.0.0",
  "description": "Assets (svg, img, etc.) management tools to help you develop the web",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install || true",
    "preinstall": "npx only-allow pnpm",
    "test:type": "turbo test:type",
    "build": "turbo build --filter='./packages/*' --filter='./frameworks/*'",
    "lint": "eslint . --ext .ts,.tsx,.js,.json --fix",
    "test": "turbo test --filter='./packages/*'"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.6",
    "turbo": "^1.10.1",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "packageManager": "pnpm@8.3.1"
}
